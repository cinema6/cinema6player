package com.cinema6.renderer.page{	import flash.external.ExternalInterface;	import flash.system.Security;		import com.cinema6.renderer.utils.GUIDUtils;		public class Page {		private var _url:String;		private var _title:String;		private var _referrer:String;		private var _playerWidth:Number;		private var _playerHeight:Number;		private var _domain:String;		private var _guid:String = GUIDUtils.create();				public function Page() {			if (ExternalInterface.available) {				try {					_url = ExternalInterface.call("function() { return document.location.href; }");					Security.allowDomain(_url);					_title = ExternalInterface.call("function() { return document.title; }");					_referrer = ExternalInterface.call("function() { return document.referrer; }");					_domain = ExternalInterface.call("function() { return document.domain; }");				} catch (e:Error) {				}			}		}				public function get title():String {			return _title;		}				public function get url():String {			return _url;		}				public function get referrer():String {			return _referrer;		}				public function get domain():String {			return _domain;		}				public function get playerWidth():Number {			return _playerWidth;		}				public function set playerWidth(value:Number):void {			_playerWidth = value;		}				public function get playerHeight():Number {			return _playerHeight;		}				public function set playerHeight(value:Number):void {			_playerHeight = value;		}				public function get guid():String {			return guid;		}	}}